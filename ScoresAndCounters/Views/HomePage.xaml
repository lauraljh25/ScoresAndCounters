<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ScoresAndCounters.ViewModels"
             x:Class="ScoresAndCounters.Views.HomePage"
             Title="{x:Static local:ResourceLibrary.ScoresAndCounters}"
             x:DataType="viewModels:HomePageViewModel"
             xmlns:local="clr-namespace:ScoresAndCounters">
    <ContentPage.BindingContext>
        <viewModels:HomePageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Button VerticalOptions="Center" Text="{x:Static local:ResourceLibrary.Continue}" HorizontalOptions="Fill" IsVisible="{Binding ShowContineButton}" />
        <Button VerticalOptions="Center" Text="{x:Static local:ResourceLibrary.NewCounterPlusSymbol}" Command="{Binding NewCounterCommand}" HorizontalOptions="Fill"/>
        <Button VerticalOptions="Center" Text="{x:Static local:ResourceLibrary.Settings}" Command="{Binding SettingsCommand}" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>
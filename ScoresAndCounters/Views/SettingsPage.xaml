<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScoresAndCounters.Views.SettingsPage"
             Title="{x:Static local:ResourceLibrary.Settings}"
             xmlns:viewModels="clr-namespace:ScoresAndCounters.ViewModels"
             xmlns:local="clr-namespace:ScoresAndCounters">

    <Grid RowDefinitions="*,Auto">
        <StackLayout Grid.Row="0">
            <Grid RowDefinitions="*,*" ColumnDefinitions="2*,*">
                <Label Grid.Row="0" Grid.Column="0" Text="Custom Increment Value 1:" FontSize="15"></Label>
                <Entry Grid.Row="0" Grid.Column="1" Keyboard="Numeric" Text="{Binding CustomIncDec1}" FontSize="20"></Entry>

                <Label Grid.Row="1" Grid.Column="0" Text="Custom Increment Value 2:" FontSize="15"></Label>
                <Entry Grid.Row="1" Grid.Column="1" Keyboard="Numeric" Text="{Binding CustomIncDec2}" FontSize="20"></Entry>
            </Grid>
        </StackLayout>

        <StackLayout Grid.Row="1">
            <Grid RowDefinitions="*" ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="{x:Static local:ResourceLibrary.Save}" Command="{Binding SaveCommand}"></Button>
                <Button Grid.Column="1" Text="{x:Static local:ResourceLibrary.Default}" Command="{Binding DefaultCommand}"></Button>
                <Button Grid.Column="2" Text="{x:Static local:ResourceLibrary.Cancel}" Command="{Binding CancelCommand}"></Button>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>